Login View for Admin::
@{
    ViewData["Title"] = "Login Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Employee Management System</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        body {
            background: linear-gradient(to right, #a28089, #9df9ef);
            font-family: 'Roboto', sans-serif;
        }

        .login-container {
            max-width: 360px;
            margin: 100px auto;
            padding: 20px;
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.1);
            border: 1px solid #ddd;
        }

        .login-header {
            text-align: center;
            margin-bottom: 30px;
        }

            .login-header img {
                width: 120px;
                border-radius: 50%;
                border: 3px solid #0072ff;
                padding: 10px;
                background: #fff;
            }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: inset 0px 1px 3px rgba(0, 0, 0, 0.1);
            padding: 10px;
        }

            .form-control:focus {
                border-color: #0072ff;
                box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25);
            }

        .btn-primary {
            background: #0072ff;
            border: none;
            border-radius: 8px;
            padding: 10px;
            font-size: 16px;
            transition: background 0.3s, transform 0.3s;
        }

            .btn-primary:hover {
                background: #005bb5;
                transform: translateY(-2px);
            }

        .text-center a {
            color: #0072ff;
            text-decoration: none;
            font-weight: bold;
        }

            .text-center a:hover {
                color: #005bb5;
                text-decoration: underline;
            }

        .login-footer {
            text-align: center;
            margin-top: 20px;
        }

            .login-footer p {
                color: #666;
                font-size: 14px;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="login-container">
            <div class="login-header">
                <img src="/content/images.jpg" alt="logo" />
                <h4>Login as an Admin</h4>
            </div>
            <form asp-controller="AccAdmin" asp-action="LoginAdmin" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="UserName" placeholder="User Name" required />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="Password" placeholder="Password" required />
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
                <div class="text-center">
                    <a href="/Account/ForgotPassword">Forgot Password?</a>
                </div>
            </form>
            <div class="login-footer">
                <p>&copy; 2024 Employee Management System</p>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>