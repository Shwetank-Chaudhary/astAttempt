@model astAttempt.Models.Entity.Customer

@{
    //Layout = "_Layout_";
    ViewData["Title"] = "Home";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Dashboard</title>
    <link rel="stylesheet" href="styles.css">
    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container">
        <h1>Customer Dashboard</h1>

        <div class="section">
            <h2>Manage Your Details</h2>
            <a class="btn btn-primary" href="/Customer/Add">
                <i class="fas fa-user-plus"></i> Add Your Details
            </a>
            <a class="btn btn-secondary" href="/Customer/Update">
                <i class="fas fa-user-edit"></i> Update Your Details
            </a>
        </div>

        <div class="section">
            <h2>View Your Orders</h2>
            <a class="btn btn-primary" href="/Order/ViewAll">
                <i class="fas fa-box"></i> View All Orders
            </a>
        </div>
    </div>

    <footer>
        &copy; 2024 Cargo Manager System
    </footer>
</body>
</html>
